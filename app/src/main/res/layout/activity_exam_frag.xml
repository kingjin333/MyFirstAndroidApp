<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".exam.exam_fragActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/first_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1번 프래그먼트 배치!" />

        <Button
            android:id="@+id/second_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2번 프래그먼트 배치!" />

        <Button
            android:id="@+id/third_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3번 프래그먼트 배치!" />
    </LinearLayout>

    <fragment
        android:id="@+id/frag1"
        android:name="com.hji.myfirstandroidapp.exam_fragment.ColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_exam_color" />

    <fragment
        android:id="@+id/frag2"
        android:name="com.hji.myfirstandroidapp.exam_fragment.ColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_exam_color" />


    <fragment
        android:id="@+id/frag3"
        android:name="com.hji.myfirstandroidapp.exam_fragment.ColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_exam_color" />

</LinearLayout>
